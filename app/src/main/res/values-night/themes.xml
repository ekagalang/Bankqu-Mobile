<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for dark mode. -->
    <style name="Theme.BankQuMobile" parent="Theme.Material3.DayNight">
        <!-- Primary brand color for dark mode. -->
        <item name="colorPrimary">@color/blue_light</item>
        <item name="colorPrimaryVariant">@color/blue_primary</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color for dark mode. -->
        <item name="colorSecondary">@color/green_light</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color for dark mode. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Dark mode background -->
        <item name="android:windowBackground">#121212</item>
    </style>
</resources>